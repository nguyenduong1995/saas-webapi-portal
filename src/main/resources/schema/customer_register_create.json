{
  "$id": "https://example.com/schema/customer_register_create.json",
  "$schema": "https://json-schema.org/draft/2019-09/schema#",
  "title": "Rules",
  "type": "object",
  "required": [
	"industry",
    "email",
	"password",
	"organizational_scale",
	"personal_information"
  ],
  "properties": {
	"industry": {
	  "type": "integer",
	  "minimum": 0
	},
    "email": {
      "type": "string",
      "format": "email",
      "description": "Email.",
      "maxLength": 200
    },
 	"password": {
      "type": "string",
      "description": "Password.",
      "pattern": "^(?=.*[a-z])(?=.*[A-Z])(?=.*[0-9])[A-Za-z0-9]{8,32}$"
    },
	"organizational_scale": {
	   "type": "object",
       "required": [
	    "no_of_orders",
	    "no_of_distributors",
		"no_of_salesmen",
		"no_of_retailers"
	   ],
	   "properties": {
		  "no_of_orders": {
		    "type": "integer",
	        "minimum": 0
		  },
		  "no_of_distributors": {
		    "type": "integer",
	        "minimum": 0
		  },
		  "no_of_salesmen": {
		    "type": "integer",
	        "minimum": 0
		  },
		  "no_of_retailers": {
		    "type": "integer",
	        "minimum": 0
		  }
	    }
	 },
	"personal_information": {
	   "type": "object",
       "required": [
	    "mobile_number",
	    "email"
	   ],
	   "properties": {
		  "mobile_number": {
		    "type": "string",
	        "description": "telephone.",
	        "pattern": "^(03|07|08|09|01[2|6|8|9])+([0-9]{8})$"
		  },
		  "email": {
		    "type": "string",
	        "format": "email",
	        "description": "Email.",
	        "maxLength": 200
		  }
	    }
	 }
	
  },
  "additionalProperties": true
}